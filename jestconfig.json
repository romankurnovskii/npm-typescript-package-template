{
	"preset": "ts-jest/presets/default-esm",
	"testEnvironment": "node",
	"testMatch": ["**/*.test.ts"],
	"moduleFileExtensions": ["ts", "js", "json", "node"],
	"extensionsToTreatAsEsm": [".ts"],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"transform": {
		"^.+\\.ts$": ["ts-jest", {
			"useESM": true
		}]
	}
}